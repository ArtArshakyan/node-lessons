{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build",
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es6"
    },
    "exclude": ["**/*.test.ts", "**/*.test.js", "node_modules"]
}
